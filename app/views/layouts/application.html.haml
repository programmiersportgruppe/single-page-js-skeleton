!!!
%head
  %title Skeleton
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag 'jquery-1.7.2'
  = javascript_include_tag 'curl'
  = csrf_meta_tags

  %body

    .topbar
      - if logged_in?
        = "logged in as #{current_user.username} (#{pluralize current_user.todos.size, 'todo'})"
        |
        = link_to "log out", logout_path
      - else
        = link_to "sign up", signup_path
        or 
        = link_to "log in", login_path

    - if flash.notice
      .notice= flash.notice

    - if flash.alert
      .alert= flash.alert

    = yield
